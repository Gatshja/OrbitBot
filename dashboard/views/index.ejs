<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OrbitBot Admin</title>
    <style>
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background-color: #1a1b1e; color: #e0e0e0; margin: 0; padding: 20px; }
        .container { max-width: 1000px; margin: 0 auto; }
        .header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 30px; border-bottom: 1px solid #333; padding-bottom: 20px; }
        .header h1 { margin: 0; font-size: 24px; color: #7289da; }
        .stats-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px; }
        .card { background: #25262b; padding: 20px; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
        .card h3 { margin: 0 0 10px 0; color: #a5a5a5; font-size: 14px; text-transform: uppercase; }
        .card .value { font-size: 28px; font-weight: bold; }
        .control-panel { background: #25262b; padding: 20px; border-radius: 8px; margin-bottom: 30px; display: flex; align-items: center; justify-content: space-between; }
        .status-indicator { display: inline-block; width: 10px; height: 10px; border-radius: 50%; margin-right: 10px; }
        .status-online { background-color: #43b581; }
        .status-maintenance { background-color: #faa61a; }
        .btn { padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; font-weight: bold; transition: background 0.2s; }
        .btn-toggle { background-color: #7289da; color: white; }
        .btn-toggle.active { background-color: #faa61a; color: black; }
        .logs-container { background: #0f0f0f; border-radius: 8px; padding: 15px; height: 400px; overflow-y: auto; font-family: 'Consolas', 'Monaco', monospace; font-size: 13px; border: 1px solid #333; }
        .log-entry { margin-bottom: 4px; border-bottom: 1px solid #222; padding-bottom: 2px; }
        .log-time { color: #666; margin-right: 10px; }
        .log-msg { white-space: pre-wrap; word-break: break-all; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>OrbitBot Dashboard</h1>
            <div>
                <span id="connection-status" style="color: #43b581;">‚óè Connected</span>
            </div>
        </div>

        <div class="stats-grid">
            <div class="card">
                <h3>Servers</h3>
                <div class="value" id="stat-servers"><%= stats.servers %></div>
            </div>
            <div class="card">
                <h3>Ping</h3>
                <div class="value" id="stat-ping"><%= Math.round(stats.ping) %>ms</div>
            </div>
            <div class="card">
                <h3>Uptime</h3>
                <div class="value" id="stat-uptime"><%= Math.floor(stats.uptime / 60) %>m</div>
            </div>
        </div>

        <div class="control-panel">
            <div style="display: flex; align-items: center;">
                <div id="status-dot" class="status-indicator <%= maintenance ? 'status-maintenance' : 'status-online' %>"></div>
                <div>
                    <strong id="status-text"><%= maintenance ? 'Maintenance Mode' : 'Online & Operational' %></strong>
                    <div style="font-size: 12px; color: #888;">Toggle to stop processing new commands</div>
                </div>
            </div>
            <button id="maintenance-btn" class="btn btn-toggle <%= maintenance ? 'active' : '' %>" onclick="toggleMaintenance()">
                <%= maintenance ? 'Disable Maintenance' : 'Enable Maintenance' %>
            </button>
        </div>

        <div class="card" style="padding: 0; background: transparent; box-shadow: none;">
            <h3>Live Terminal Logs</h3>
            <div class="logs-container" id="logs-box">
                <!-- Logs will appear here -->
            </div>
        </div>
    </div>

    <script>
        function formatTime(seconds) {
            const h = Math.floor(seconds / 3600);
            const m = Math.floor((seconds % 3600) / 60);
            const s = Math.floor(seconds % 60);
            return `${h}h ${m}m ${s}s`;
        }

        async function toggleMaintenance() {
            try {
                const res = await fetch('/admin/api/maintenance', { method: 'POST' });
                const data = await res.json();
                updateUI(data.maintenance);
            } catch (e) {
                alert('Failed to toggle maintenance mode');
            }
        }

        function updateUI(maintenance) {
            const btn = document.getElementById('maintenance-btn');
            const dot = document.getElementById('status-dot');
            const text = document.getElementById('status-text');

            if (maintenance) {
                btn.textContent = 'Disable Maintenance';
                btn.classList.add('active');
                dot.className = 'status-indicator status-maintenance';
                text.textContent = 'Maintenance Mode';
            } else {
                btn.textContent = 'Enable Maintenance';
                btn.classList.remove('active');
                dot.className = 'status-indicator status-online';
                text.textContent = 'Online & Operational';
            }
        }

        async function fetchData() {
            try {
                const res = await fetch('/admin/api/stats');
                const data = await res.json();

                document.getElementById('stat-servers').textContent = data.servers;
                document.getElementById('stat-ping').textContent = Math.round(data.ping) + 'ms';
                document.getElementById('stat-uptime').textContent = formatTime(data.uptime);
                
                // Update logs
                const logsBox = document.getElementById('logs-box');
                logsBox.innerHTML = data.logs.map(log => `
                    <div class="log-entry">
                        <span class="log-time">[${log.time}]</span>
                        <span class="log-msg" style="color: ${log.type === 'error' ? '#ff6b6b' : '#e0e0e0'}">${log.msg}</span>
                    </div>
                `).join('');
                
                // Auto scroll to bottom if near bottom
                logsBox.scrollTop = logsBox.scrollHeight;

                updateUI(data.maintenance);
            } catch (e) {
                console.error(e);
            }
        }

        setInterval(fetchData, 2000); // Refresh every 2s
        fetchData(); // Initial fetch
    </script>
</body>
</html>
